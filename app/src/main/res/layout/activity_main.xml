<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".mvp.View.MainActivity">
    <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="input your ID"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/et_inputId1"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="input your PW" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/et_inputId1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:id="@+id/et_inputpw1"/>
        <Button
                android:text="확인"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_botton1" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/et_inputpw1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="회원가입"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUp" android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toTopOf="@+id/et_inputId1" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>